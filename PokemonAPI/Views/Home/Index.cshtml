@{
    ViewData["Title"] = "Pokemon";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewData["Message"];
    var pokemons = ViewData["Pokemons"] as List<Pokemon>;
}
<style>
    .home-section {
        height: auto;
    }
    .home-cover {
        height: calc(40vh);
        background: rgba(34,23,56,12);
        margin: -1rem -4rem;
        padding: 1.5rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .home-title {
        color: ghostwhite;
    }
    .home-subtitle {
        color: whitesmoke;
    }

    .pokemons-section {
        height: auto;
        min-height: 60vh;
        margin-top: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .pokemons-description {
        display: flex;
        justify-content: space-between;
    }

    input.pokemons-amount {
        width: 2.5rem;
    }

    table.pokemons-table {
        border-collapse: collapse;
    }

    .message{
        margin-top: 3rem;
    }
    
</style>

<article class="home-section">
    <div class="home-cover">
        <h1 class="home-title">POKEMONS</h1>
        <h3 class="home-subtitle">♪♪Tienes que atraparlos♪♪</h3>
    </div>    
</article>

@if (pokemons != null && pokemons.Count > 0)
{
    <article class="pokemons-section">
        <div class="pokemons-description">
            <h5 class="pokemons-title">
                Pokemons por Capturar:
                <input type="number" name="Amount" id="Amount" class="pokemons-amount" value="5" readonly/>
            </h5>
            <input type="submit" value="Buscar" />
        </div>
        <table class="pokemons-table">
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Habilidades</th>
            </tr>
            @foreach (var p in @pokemons)
            {
                <tr>
                    <td>@p.Name</td>
                    
                    @{
                        var types = new System.Text.StringBuilder();
                    }
                    @foreach (var t in p.Types)
                    {
                        types.AppendLine(t.Type.Name);
                    }
                    <td>@string.Join(",", types)</td>
                    
                    @{
                        var abilities = new System.Text.StringBuilder();
                    }
                    @foreach (var a in p.Abilities)
                    {
                        abilities.AppendLine(a.ability.name);
                    }
                    <td>@string.Join(",", abilities)</td>
                </tr>
            }
        </table>
    </article>
}

<div class="message">
    <h4>@message</h4>
</div>